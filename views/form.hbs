<div class="back-button">
    <figure>
        <a href="/chapters.html">
            <img src="/images/back-arw.png" alt="placeholder" style="width: 100px; height: 100px">
        </a>
    </figure>
</div>
<div class="container">
    <div class="form-card">
        <h1>BASIC INFO</h1>
        <form id="infoForm" action="/submit" method="post">
            <label for="nickname">Nickname:</label>
            <input type="text" id="nickname" name="nickname" value="{{formData.nickname}}" required>

            <label for="pronouns">Pronouns:</label>
            <select id="pronouns" name="pronouns" required>
                <option value="" disabled selected>Select your pronouns</option>
                <option value="he" {{#if (eq formData.pronouns "he")}}selected{{/if}}>He</option>
                <option value="she" {{#if (eq formData.pronouns "she")}}selected{{/if}}>She</option>
                <option value="other" {{#if (eq formData.pronouns "other")}}selected{{/if}}>Other</option>
            </select>

            <label for="color">Favorite color:</label>
            <input type="color" id="color" name="color" value="{{formData.color}}" required>

            <label for="food">Favorite food:</label>
            <input type="text" id="food" name="food" value="{{formData.food}}" required>

            <label for="hobby">Favorite hobby:</label>
            <input type="text" id="hobby" name="hobby" value="{{formData.hobby}}" required>

            <div class="buttons">
                <button type="submit" class="continue">CONTINUE</button>
                <button type="reset" class="delete">DELETE</button>
            </div>
        </form>
    </div>
    <div class="character"></div>
</div>

<script>
    // Confirm before submitting the form
    document.getElementById('infoForm').addEventListener('submit', function (e) {
        const confirmSubmit = confirm('Are you sure you want to submit your information?');
        if (!confirmSubmit) {
            e.preventDefault(); // Prevent form submission if the user cancels
        }
    });

    // Confirm before resetting the form
    document.querySelector('button[type="reset"]').addEventListener('click', function (e) {
        const confirmReset = confirm('Are you sure you want to delete your information?');
        if (!confirmReset) {
            e.preventDefault(); // Prevent form reset if the user cancels
        }
    });
</script>